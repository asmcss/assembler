{
  "name": "@opis/assembler",
  "version": "1.0.0",
  "main": "dist/assembler.cjs.js",
  "module": "dist/assembler.es.js",
  "browser": "dist/assembler.js",
  "dependencies": {},
  "scripts": {
    "build": "yarn compile && yarn scss && yarn postcss && yarn uglify",
    "compile": "rollup -c --environment BUILD:production && tsc",
    "scss": "node-sass -o ./dist/ ./src/restyle/restyle.scss --output-style expanded",
    "postcss": "postcss -r ./dist/restyle.css --no-map",
    "uglify": "uglifycss ./dist/restyle.css --output ./dist/restyle.min.css",
    "test": "jest"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.1.0",
    "autoprefixer": "^10.2.1",
    "jest": "^26.6.3",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "rollup": "^2.36.1",
    "rollup-plugin-import-resolver": "^1.0.5",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3",
    "uglifycss": "^0.0.29"
  },
  "types": "types/index.d.ts",
  "files": [
    "dist"
  ],
  "jest": {
    "setupFiles": [
      "./__tests__/mocks/mock.js"
    ],
    "modulePathIgnorePatterns": [
      "mocks"
    ]
  }
}
